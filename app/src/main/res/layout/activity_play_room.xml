<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayRoom">

    <ImageView
        android:id="@+id/toy1"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/toy2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smileyFace"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/toy2"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toStartOf="@+id/toy3"
        app:layout_constraintStart_toEndOf="@+id/toy1"
        app:layout_constraintTop_toBottomOf="@+id/healthBar"
        app:srcCompat="@drawable/piggy" />

    <ImageView
        android:id="@+id/toy3"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/toy4"
        app:layout_constraintStart_toEndOf="@+id/toy2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sihilisko" />

    <ImageView
        android:id="@+id/toy4"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toy3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vetolelu" />

    <TextView
        android:id="@+id/toy1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toy 1: 3"
    app:layout_constraintStart_toStartOf="@+id/toy1"
    app:layout_constraintTop_toBottomOf="@+id/toy1" />

    <TextView
        android:id="@+id/toy2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toy 2: 5"
    app:layout_constraintStart_toStartOf="@+id/toy2"
    app:layout_constraintTop_toBottomOf="@+id/toy2" />

    <TextView
        android:id="@+id/toy3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toy 3: 2"
    app:layout_constraintStart_toStartOf="@+id/toy3"
    app:layout_constraintTop_toBottomOf="@+id/toy3" />

    <TextView
        android:id="@+id/toy4Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toy 4: 4"
    app:layout_constraintStart_toStartOf="@+id/toy4"
    app:layout_constraintTop_toBottomOf="@+id/toy4" />

    <ImageView
        android:id="@+id/petImageView"
        android:layout_width="159dp"
        android:layout_height="165dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="116dp"
        android:src="@drawable/lechita0001"
        app:layout_constraintBottom_toTopOf="@+id/gohome_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healthBar" />

    <ProgressBar
        android:id="@+id/healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:progress="50"
        android:progressDrawable="@drawable/health_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/smileyFace"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/hp_smiley"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gohome_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="68dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goshop_b"
        app:layout_constraintStart_toEndOf="@+id/gowalk_b"
        app:srcCompat="@drawable/home_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goshop_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gohome_b"
        app:srcCompat="@drawable/shop_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gowalk_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/walk_button" />

</androidx.constraintlayout.widget.ConstraintLayout>